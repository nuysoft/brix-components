doctype html
html
    head
        //- script(src='http://g-assets.daily.taobao.net/thx/brix-release/require-config-css.js')
        script(src='http://mo.local:4242/require-config-css.js')
        style.
            body {
                padding: 10px;
            }
    body
        //- 示例
        div.row
            div.col-xs-6
                h3.fontsize-16 为 <code>input</code> 元素绑定日期选择器。
                input.form-control.w100(bx-name='components/datepickerwrapper' type='text')
            div.col-xs-6
                h3.fontsize-16 为 <code>input</code> 元素绑定日期选择器。
                input.form-control.w100(bx-name='components/datepickerwrapper' data-pages='2' type='text')
            div.col-xs-6
                h3.fontsize-16 为任意元素绑定日期选择器。
                a(bx-name='components/datepickerwrapper' href='javascript:;') 请选择日期
            div.col-xs-6
                h3.fontsize-16 自定义样式。
                a(bx-name='components/datepickerwrapper' href='javascript:;')
                    span(data-index='0') 请选择日期
                    i.brixfont.down &#xe623;<!--&#xe623;-->
                    i.brixfont.up &#xe62e;<!--&#xe62e;-->
        //- 启动
        script.
            require(['brix/loader', 'jquery', 'highlightjs'], function(Loader, $, hljs) {
                window.Loader = Loader
                Loader.boot(function() {
                    $('iframe', top.document).height($(document.body).outerHeight())
                    $(document.body).find('pre code').each(function(index, code) {
                        hljs.highlightBlock(code)
                    })
                    var instances = Loader.query('components/colorpicker')
                })
            })
