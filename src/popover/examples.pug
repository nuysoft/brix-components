doctype html
html
    head
        include ../../doc/head.pug
        style.
            body [bx-name="components/popover"] {
                vertical-align: top;
                width: 200px;
                margin-right: 10px;
                margin-bottom: 10px;
            }
            table.table { margin-left: -10px; }
            table.table tbody tr td { padding: 10px; }
            table.table td:nth-child(1) { text-align: left; }
            table.table td:nth-child(2) { text-align: center; }
            table.table td:nth-child(3) { text-align: right; }
    body
        //- 示例
        div
           div.btn.btn-default(bx-name='components/popover' data-placement='top' data-title='Popover on top' data-content='Envy is the ulcer of the soul.') Popover on top
           div.btn.btn-default(bx-name='components/popover' data-placement='right' data-title='Popover on right' data-content='Envy is the ulcer of the soul.') Popover on right
           div.btn.btn-default(bx-name='components/popover' data-placement='bottom' data-title='Popover on bottom' data-content='Envy is the ulcer of the soul.') Popover on bottom
           div.btn.btn-default(bx-name='components/popover' data-placement='left' data-title='Popover on left' data-content='Envy is the ulcer of the soul.') Popover on left
        div
